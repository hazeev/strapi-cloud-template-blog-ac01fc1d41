{
  "kind": "collectionType",
  "collectionName": "changelogs",
  "info": {
    "singularName": "changelog",
    "pluralName": "changelogs",
    "displayName": "Changelog",
    "description": "Product updates, features, and announcements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "tags": {
      "type": "json"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
